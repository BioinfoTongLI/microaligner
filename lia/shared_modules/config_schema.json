{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Parameters",
    "definitions": {
        "Parameters": {
            "title": "Parameters",
            "type": "object",
            "required": [
                "Input",
                "Output",
                "DataStructure",
                "RegistrationParameters"
            ],
            "additionalProperties": false,
            "properties": {
                "Input": {
                    "$ref": "#/definitions/Input"
                },
                "Output": {
                    "$ref": "#/definitions/Output"
                },
                "DataStructure": {
                    "$ref": "#/definitions/DataStructure"
                },
                "RegistrationParameters": {
                    "$ref": "#/definitions/RegistrationParameters"
                }
            }
        },
        "DataStructure": {
            "title": "DataStructure",
            "type": "object",
            "required": [
                "ReferenceChannel",
                "ReferenceImage"
            ],
            "additionalProperties": false,
            "properties": {
                "ReferenceImage": {
                    "type": "integer",
                    "minimum": 0
                },
                "ReferenceChannel": {
                    "type": "string"
                }
            }
        },
        "Input": {
            "title": "Input",
            "type": "object",
            "required": [
                "InputImagePaths",
                "InputIsCycleStack"
            ],
            "additionalProperties": false,
            "properties": {
                "InputImagePaths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "InputIsCycleStack": {
                    "type": "boolean"
                }
            }
        },
        "Output": {
            "title": "Output",
            "type": "object",
            "required": [
                "OutputDir",
                "SaveOutputToCycleStack"
            ],
            "additionalProperties": false,
            "properties": {
                "OutputDir": {
                    "type": "string"
                },
                "SaveOutputToCycleStack": {
                    "type": "boolean"
                }
            }
        },
        "RegistrationParameters": {
            "title": "RegistrationParameters",
            "type": "object",
            "anyOf": [
                {"required":["FeatureReg"]},
                {"required":["OptFlowReg"]}
            ],
            "additionalProperties": false,
            "properties": {
                "FeatureReg": {
                    "$ref": "#/definitions/RegistrationParametersFields"
                },
                "OptFlowReg": {
                    "$ref": "#/definitions/RegistrationParametersFields"
                }
            }
        },
        "RegistrationParametersFields": {
            "title": "RegistrationParametersFields",
            "type": "object",
            "required": [
                "NumberIterationsPerLevel",
                "NumberOfWorkers",
                "NumberPyramidLevels",
                "Overlap",
                "TileSize",
                "UseFullResImage",
                "UseDOG"
            ],
            "additionalProperties": false,
            "properties": {
                "NumberPyramidLevels": {
                    "type": "integer",
                    "minimum": 0
                },
                "NumberIterationsPerLevel": {
                    "type": "integer",
                    "minimum": 1
                },
                "TileSize": {
                    "type": "integer",
                    "minimum": 1
                },
                "Overlap": {
                    "type": "integer",
                    "minimum": 10
                },
                "NumberOfWorkers": {
                    "type": "integer",
                    "minimum": 0
                },
                "UseFullResImage": {
                    "type": "boolean"
                },
                "UseDOG":{
                    "type": "boolean"
                }
            }
        }
    }
}
